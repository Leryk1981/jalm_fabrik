# Barbershop Plugin Configuration
# Скопируйте этот файл в .env и заполните вашими значениями

# ============================================================================
# TELEGRAM BOT CONFIGURATION
# ============================================================================
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/telegram
TELEGRAM_BOT_USERNAME=your_bot_username

# ============================================================================
# FIREBASE CONFIGURATION
# ============================================================================
# Создайте проект на https://console.firebase.google.com/
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json
FIREBASE_DATABASE_URL=https://your-project-id.firebaseio.com

# ============================================================================
# AWS LAMBDA CONFIGURATION
# ============================================================================
# Настройте AWS CLI: aws configure
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
LAMBDA_FUNCTION_NAME=barbershop-booking
LAMBDA_RUNTIME=python3.9
LAMBDA_MEMORY_SIZE=256
LAMBDA_TIMEOUT=30

# ============================================================================
# API GATEWAY CONFIGURATION
# ============================================================================
API_BASE_URL=https://your-api-gateway-url.amazonaws.com
API_STAGE=prod
API_KEY=your_api_key_here

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=firestore://your-project-id
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# Сгенерируйте секретные ключи: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-32-characters-long
JWT_SECRET=your-jwt-secret-here-32-characters-long
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Разрешенные домены для CORS
CORS_ORIGINS=https://your-domain.com,http://localhost:3000,http://localhost:8080
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# ============================================================================
# EMAIL CONFIGURATION (опционально)
# ============================================================================
# Для отправки уведомлений по email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# ============================================================================
# PAYMENT CONFIGURATION (опционально)
# ============================================================================
# Для интеграции с платежными системами
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
PAYMENT_CURRENCY=RUB

# ============================================================================
# NOTIFICATION CONFIGURATION
# ============================================================================
# Настройки уведомлений
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=false
NOTIFICATION_TELEGRAM_ENABLED=true
NOTIFICATION_REMINDER_HOURS=24

# ============================================================================
# BUSINESS CONFIGURATION
# ============================================================================
# Настройки барбершопа
BUSINESS_NAME=Мой Барбершоп
BUSINESS_ADDRESS=ул. Примерная, 123
BUSINESS_PHONE=+7 (999) 123-45-67
BUSINESS_EMAIL=info@mybarbershop.com
BUSINESS_TIMEZONE=Europe/Moscow

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================
# Настройки для разработки
DEBUG=false
TESTING=false
ENVIRONMENT=production
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================
# Настройки производительности
CACHE_TTL=3600
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
MAX_FILE_SIZE=10485760  # 10MB

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
# Настройки резервного копирования
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Каждый день в 2:00
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups 